FROM python

RUN mkdir /spider/
ADD ./spider/requirements.txt /spider/requirements.txt
WORKDIR /spider

RUN apt-get update -y

RUN pip install --upgrade pip
RUN pip install -r requirements.txt

RUN adduser --disabled-password --gecos '' gw
RUN mkdir /var/log/gw
RUN chown gw:gw /var/log/gw
RUN mkdir /var/run/gw
RUN chown gw:gw /var/run/gw
